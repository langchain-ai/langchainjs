{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "eslint.config.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
